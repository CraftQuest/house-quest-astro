---
export interface Props {
		title: string;
		summary?: string;
		postDate?: string;
        slug: string;
}

const { title, summary, postDate, slug } = Astro.props;
---

<div>
    <a href={'/news/' + slug} class="block mt-4">
      <p class="text-xl font-semibold text-gray-900">{title}</p>
      <p class="mt-3 text-base text-gray-900">{summary}</p>
    </a>
  </div>